@model IEnumerable<OCMS03.Models.ViewModels.DoctorViewModel.ViewModelUserRole>

@{
    ViewData["Title"] = "AllDoctors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-4 col-3">
        <h4 class="page-title">All Doctors</h4>
    </div>
    <div class="col-sm-8 col-9 text-right m-b-20">
        <a asp-controller="Administration" asp-action="Register"  class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Add User</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-border table-striped custom-table datatable mb-0">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th class="text-right">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td><img width="28" height="28" src="~/profileImage/@user.ImagePath" class="rounded-circle m-r-5" alt=""> @user.FirstName &nbsp; @user.LastName</td>
                            <td>@user.AddressLine1 &nbsp; @user.AddressLine2</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Email</td>
                            <td class="text-right">
                                <div class="dropdown dropdown-action">
                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a class="dropdown-item" href="edit-patient.html"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                        <a class="dropdown-item" asp-action="DeleteUser" asp-route-id="@user.Id"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
