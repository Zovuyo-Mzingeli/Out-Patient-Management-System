@using Microsoft.AspNetCore.Identity
@using OCMS03.Models.Content

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Start your development with a Dashboard for Bootstrap 4.">
    <meta name="author" content="Creative Tim">
    <title>@ViewData["Title"] - OCMS03</title>

    <link rel="icon" href="~/images/ThCIcon.PNG" type="image/png">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700">

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


    <link rel="stylesheet" href="~/guest/assets/vendor/nucleo/css/nucleo.css" type="text/css">
    <link rel="stylesheet" href="~/guest/assets/vendor/fortawesome/fontawesome-free/css/all.min.css" type="text/css">
    <link href="~/guest/assets/css/argons.css" rel="stylesheet" />
    <link href="~/guest/assets/style.css" rel="stylesheet" />
    <link href="~/guest/fonts/material-design-iconic-font/css/material-design-iconic-font.css" rel="stylesheet" />
    <link href="~/guest/vendor/date-picker/css/datepicker.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/guestcss/style.css">

    <link href="~/main/css/styles.css" rel="stylesheet" />
    <link href="~/main/css/styless.css" rel="stylesheet" />
    <link href="~/guest/tabstyles.css" rel="stylesheet" />

    <style>
        input.input-validation-error {
            border-color: red;
        }
    </style>

</head>

<body>

    <nav class="sidenav navbar navbar-vertical  fixed-left  navbar-expand-xs navbar-light bg-white" id="sidenav-main">
        <div class="scrollbar-inner">

            <div class="sidenav-header  align-items-left">
                <a class="navbar-brand" asp-controller="Doctor" asp-action="Schedule">
                    <img src="~/images/TCctive.PNG" class="navbar-brand-img" />
                </a>
            </div>
            <div class="navbar-inner">

                <div class="collapse navbar-collapse" id="sidenav-collapse-main">

                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a asp-controller="Doctor" asp-action="DailySchedule" class="nav-link">
                                <i class="ni ni-bullet-list-67 text-default"></i>
                                <span class="nav-link-text">My Appointment</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Examinations" asp-action="VSigns" class="nav-link">
                                <i class="ni ni-palette text-red"></i>
                                <span class="nav-link-text">Diagnosis Patient</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="" asp-action="" class="nav-link">
                                <i class="ni ni-ui-04 text-blue"></i>
                                <span class="nav-link-text">Patients Transfered</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="" asp-action="" class="nav-link">
                                <i class="ni ni-map-big text-orange"></i>
                                <span class="nav-link-text">Search Patient</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Hospital" asp-action="Index" class="nav-link">
                                <i class="ni ni-pin-3 text-primary"></i>
                                <span class="nav-link-text">Find Hospital</span>
                            </a>
                        </li>
                    </ul>

                </div>
            </div>
        </div>
    </nav>

    <div class="main-content" id="panel">
        <nav class="navbar navbar-top navbar-expand navbar-dark bg-info border-bottom">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <ul class="navbar-nav align-items-center  ml-md-auto ">
                        <li class="nav-item d-xl-none">

                            <div class="pr-3 sidenav-toggler sidenav-toggler-dark" data-action="sidenav-pin" data-target="#sidenav-main">
                                <div class="sidenav-toggler-inner">
                                    <i class="sidenav-toggler-line"></i>
                                    <i class="sidenav-toggler-line"></i>
                                    <i class="sidenav-toggler-line"></i>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item d-sm-none">
                            <a class="nav-link" href="#" data-action="search-show" data-target="#navbar-search-main">
                                <i class="ni ni-zoom-split-in"></i>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="ni ni-bell-55"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-xl  dropdown-menu-right  py-0 overflow-hidden">

                                <div class="px-3 py-3">
                                    <h6 class="text-sm text-muted m-0">You have <strong class="text-primary">13</strong> notifications.</h6>
                                </div>

                                <div class="list-group list-group-flush">
                                    <a href="#!" class="list-group-item list-group-item-action">
                                        <div class="row align-items-center">
                                            <div class="col-auto">
                                                <img alt="Image placeholder" src="~/guest/assets/img/theme/team-5.jpg" class="avatar rounded-circle">
                                            </div>
                                            <div class="col ml--2">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div>
                                                        <h4 class="mb-0 text-sm">John Snow</h4>
                                                    </div>
                                                    <div class="text-right text-muted">
                                                        <small>3 hrs ago</small>
                                                    </div>
                                                </div>
                                                <p class="text-sm mb-0">A new issue has been reported for Argon.</p>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="ni ni-ungroup"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-dark bg-default  dropdown-menu-right ">
                                <div class="row shortcuts px-4">
                                    <a href="#!" class="col-4 shortcut-item">
                                        <span class="shortcut-media avatar rounded-circle bg-gradient-orange">
                                            <i class="ni ni-email-83"></i>
                                        </span>
                                        <small>Email</small>
                                    </a>
                                    <a href="#!" class="col-4 shortcut-item">
                                        <span class="shortcut-media avatar rounded-circle bg-gradient-green">
                                            <i class="ni ni-books"></i>
                                        </span>
                                        <small>Reports</small>
                                    </a>
                                </div>
                            </div>
                        </li>
                    </ul>
                    <ul class="navbar-nav align-items-center  ml-auto ml-md-0 ">
                        <li class="nav-item dropdown">
                            <a class="nav-link pr-0" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <div class="media align-items-center">
                                    <span class="avatar avatar-sm rounded-circle">
                                        @*<img alt="Image placeholder" src="~/guest/assets/img/theme/team-4.jpg">*@
                                    </span>
                                    <div class="media-body  ml-2  d-none d-lg-block">
                                        @if (SignInManager.IsSignedIn(User))
                                        {
                                            <span class="mb-0 text-sm  font-weight-bold">Hello @UserManager.GetUserName(User)!</span>
                                        }
                                    </div>
                                </div>
                            </a>
                            <div class="dropdown-menu  dropdown-menu-right ">
                                <div class="dropdown-header noti-title">
                                    <h6 class="text-overflow m-0">Welcome!</h6>
                                </div>
                                <a asp-controller="Doctor" asp-action="UserDetails" class="dropdown-item">
                                    <i class="ni ni-single-02"></i>
                                    <span>My profile</span>
                                </a>
                                <a asp-controller="Doctor" asp-action="EditUser" class="dropdown-item">
                                    <i class="ni ni-settings-gear-65"></i>
                                    <span>Update Profile</span>
                                </a>
                                <a asp-controller="Doctor" asp-action="Schedule" class="dropdown-item">
                                    <i class="ni ni-calendar-grid-58"></i>
                                    <span>Activity</span>
                                </a>
                                <div class="dropdown-divider"></div>
                                <a asp-controller="Account" asp-action="Logout" class="dropdown-item">
                                    <i class="ni ni-user-run"></i>
                                    <span>Logout</span>
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="header bg-info pb-6">
            <div class="container-fluid">
                <div class="header-body">
                    <div class="row align-items-center py-4">
                        <div class="col-lg-6 col-7">
                            <h6 class="text-white d-inline-block mb-0">Staff Portal</h6>
                            <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">

                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        
        <div class="container-fluid mt--6">
            <div class="header bg-white pb-1">
                <div class="container-fluid">
                    <div class="header-body">
                        <div class="row align-items-center py-4">
                            <div class="col-lg-6 col-7">
                                <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                                    <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                                        <li class="breadcrumb-item"><a asp-controller="Administrstion" asp-action="Index1"><i class="ni ni-single-02 text-yellow"></i></a></li>
                                        <li class="breadcrumb-item"><a asp-controller="Examination" asp-action="Index">Appointment Checkin</a></li>
                                        <li class="breadcrumb-item active text-info" aria-current="page">Patient Examination</li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-12 order-xl-12">
                    <div class="card">
                        <div class="card-header">
                            <ul class="nav nav-tabs">
                                <div class="row col-xl-12">
                                    <div class="col-xl-12">
                                        <nav>
                                            <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                                                <a class="nav-item nav-link" asp-controller="Examinations" asp-action="VSigns" role="presentation">Vitals Sign</a>
                                                <a class="nav-item nav-link" asp-controller="Examinations" asp-action="PhysicalExaminationNotes" role="presentation">Examination Notes</a>
                                                <a class="nav-item nav-link" asp-controller="Examinations" asp-action="SaveAllergyD" role="presentation">Patient Allergies</a>
                                                <a class="nav-item nav-link" asp-controller="Examinations" asp-action="PrescriptionNotes" role="presentation">Prescription</a>
                                                <a class="nav-item nav-link" asp-controller="Examinations" asp-action="Referral" role="presentation">Pateint Referral</a>
                                            </div>
                                        </nav>
                                        <div class="tab-content py-5 px-3 px-sm-0" id="nav-tabContent">
                                            <div class="tab-pane fade show active" role="tabpanel">
                                                @RenderBody()
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; OCMS03_TheCollective 2020</span>
                </div>
            </div>
        </footer>
    </div>


    <script src="~/guest/assets/jsfile.js"></script>
    <script src="~/guest/assets/vendor/jquery/dist/jquery.min.js"></script>
    <script src="~/guest/assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    @await Html.PartialAsync("_notificationPartial")

    <script src="~/guest/assets/vendor/js-cookie/js.cookie.js"></script>
    <script src="~/guest/assets/vendor/jquery.scrollbar/jquery.scrollbar.min.js"></script>
    <script src="~/guest/assets/vendor/jquery-scroll-lock/dist/jquery-scrollLock.min.js"></script>

    <script src="~/guest/assets/vendor/chart.js/dist/Chart.min.js"></script>
    <script src="~/guest/assets/vendor/chart.js/dist/Chart.extension.js"></script>

    <script src="~/guest/assets/js/argon.js?v=1.2.0"></script>

    <script src="~/guestjs/jquery-3.3.1.min.js"></script>

    <script src="~/guestjs/jquery.steps.js"></script> 

    <script src="~/guestvendor/date-picker/js/datepicker.js"></script>
    <script src="~/guestvendor/date-picker/js/datepicker.en.js"></script>

    <script src="~/guestjs/main.js"></script>


    @RenderSection("Scripts", required: false)
</body>

</html>
