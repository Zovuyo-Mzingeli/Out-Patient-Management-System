@model IEnumerable<OCMS03.Models.Content.WalkIn>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-4 col-3">
        <h4 class="page-title">All User</h4>
    </div>
    <div class="col-sm-8 col-9 text-right m-b-20">
        <a asp-controller="WalkIns" asp-action="RegisterWalkIn" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Add Walk-In</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-border table-striped custom-table datatable mb-0">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Gender</th>
                        <th>Address</th>
                        <th>Phone Number</th>
                        <th class="text-right">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FirstName &nbsp; @user.LastName</td>
                            <td>@user.Gender</td>
                            <td>@user.AddressLine1 </td>
                            <td>@user.PhoneNumber</td>
                            <td class="text-right">
                                <div class="dropdown dropdown-action">
                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a class="dropdown-item" asp-controller="WalkIns" asp-action="RegisterWalkIn" asp-route-id="@user.WalkInId"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                        <a class="dropdown-item" asp-action="DeleteUser" asp-route-id="@user.WalkInId"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

