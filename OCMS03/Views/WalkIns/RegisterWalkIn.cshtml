@model OCMS03.Models.Content.WalkIn

@{
    ViewData["Title"] = "RegisterWalkIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="col-md-12">
        <div class="card">
            <div class="card-body" id="collapseOne">
                <h6 class="heading-small text-muted  mb-4">Personal Details</h6>
                <form asp-action="RegisterWalkIn" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="pl-lg-4">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label" asp-for="FirstName">First Name</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-user"></i></div>
                                        </div>
                                        <input asp-for="FirstName" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label" asp-for="LastName">Last Name</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-user"></i></div>
                                        </div>
                                        <input asp-for="LastName" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label" asp-for="Title">Title</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-format-size"></i></div>
                                        </div>
                                        <select asp-for="Title" class="form-control">
                                            <option value="" class="option">Select Title</option>
                                            <option value="Mr" class="option">Mr</option>
                                            <option value="Mrs" class="option">Mrs</option>
                                            <option value="Miss" class="option">Miss</option>
                                            <option value="Dr" class="option">Dr</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label" asp-for="Gender">Gender</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-male-female"></i></div>
                                        </div>
                                        <select asp-for="Gender" class="form-control">
                                            <option value="" class="option">Select Gender</option>
                                            <option value="Male" class="option">Male</option>
                                            <option value="Female" class="option">Female</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label" asp-for="Dob">Date Of Birth</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                        <input asp-for="Dob" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label" asp-for="Idnumber">ID No:</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-id-card"></i></div>
                                        </div>
                                        <input asp-for="Idnumber" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-control-label" asp-for="PhoneNumber">Phone Number</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fa fa-phone"></i></div>
                                </div>
                                <input asp-for="PhoneNumber" class="form-control" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 pb-3">
                                <div class="form-group">
                                    <label class="form-control-label" asp-for="AddressLine1">AddressLine1</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-home"></i></div>
                                        </div>
                                        <input asp-for="AddressLine1" class="form-control" placeholder="Stress/House Number" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr class="my-4" />
                        <h6 class="heading-small text-muted mb-4">Next Of Kin Information</h6>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label" asp-for="NextOfName">First Name</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-user"></i></div>
                                        </div>
                                        <input asp-for="NextOfName" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label" asp-for="NextOfKinSurname">Last Name</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-user"></i></div>
                                        </div>
                                        <input asp-for="NextOfKinSurname" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-control-label" asp-for="Relationship">Relationship</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-male-female"></i></div>
                                        </div>
                                        <select asp-for="Relationship" class="form-control">
                                            <option value="" class="option">Select Relationship</option>
                                            <option value="Guardian" class="option">Guardian</option>
                                            <option value="Father" class="option">Father</option>
                                            <option value="Mother" class="option">Mother</option>
                                            <option value="Brother" class="option">Brother</option>
                                            <option value="Sister" class="option">Sister</option>
                                            <option value="Cousin" class="option">Cousin</option>
                                            <option value="Foster Parent" class="option">Foster Parent</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-control-label" asp-for="NextOfKinNumber">Phone Number</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-phone"></i></div>
                                        </div>
                                        <input asp-for="NextOfKinNumber" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary submit-btn">
                                Create Account
                            </button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>