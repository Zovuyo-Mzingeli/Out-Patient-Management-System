@model OCMS03.Models.ViewModels.ClinicViewModel.SearchClinic

@{
    ViewData["Title"] = "FindClinic";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500" rel="stylesheet" />
    <link href="~/search/findloaction/css/main.css" rel="stylesheet" />
</head>
<body>
    <div class="s002">
        <form>
            <fieldset>
                <legend>SEARCH CLINIC</legend>
            </fieldset>
            <div class="inner-form">
                <div class="input-field fouth-wrap">
                    <div class="icon-wrap">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                            <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"></path>
                        </svg>
                    </div>
                    <select asp-for="province" class="form-control" asp-items="ViewBag.ProvinceId">
                        <option value="" class="option">Select Province</option>
                    </select>
                </div>
                <div class="input-field first-wrap">
                    <div class="icon-wrap">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                            <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"></path>
                        </svg>
                    </div>
                    <select asp-for="city" class="form-control" asp-items="ViewBag.CityId">
                        <option value="" class="option">Select City/Suburb</option>
                    </select>
                </div>
                <div class="input-field first-wrap">
                    <div class="icon-wrap">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                            <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"></path>
                        </svg>
                    </div>
                    <input asp-for="clinic" class="form-control" placeholder="Clinic Name" />
                </div>

                <div class="input-field fifth-wrap">
                    <input class="btn-search" type="submit" value="SEARCH"/>
                </div>
            </div>
        </form>
    </div>
    @if (Model != null)
    {
        <h5>@Model.clinic</h5>
        <h5>@Model.city</h5>
    }
    <script src="~/search/findloaction/js/extention/choices.js"></script>
    <script src="~/search/findloaction/js/extention/flatpickr.js"></script>
    <script>
        flatpickr(".datepicker",
            {});

    </script>
    <script>
        const choices = new Choices('[data-trigger]',
            {
                searchEnabled: false,
                itemSelectText: '',
            });

    </script>
</body>
</html>

