@model OCMS03.Models.ViewModels.UserRegistrationModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

    <div class="hero-wrap" style="background-image: url(/images/bg_5.jpg); background-attachment:fixed;">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center" data-scrollax-parent="true">
                <div class="col-md-8 ftco-animate text-center fadeInUp ftco-animated">
                    <div class="card">
                        <div class="card-header bg-info text-center text-white font-weight-bolder"><h5>New Here?</h5><h6>Signing up is easy. It only takes a few steps</h6></div>
                        <div class="card-body bg-transparent text-black-50 text-left">
                            <form asp-action="Register" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="FirstName" class="control-label"></label>
                                        <input asp-for="FirstName" class="form-control col-md-12" placeholder="First Name" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label asp-for="LastName" class="control-label"></label>
                                        <input asp-for="LastName" class="form-control col-md-12" placeholder="Last Name" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-row">
                                        <div class="col-md-12">
                                            <label asp-for="Email" class="control-label"></label>
                                            <input asp-for="Email" class="form-control col-md-12" placeholder="Email Address" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="Password" class="control-label"></label>
                                        <input asp-for="Password" class="form-control col-md-12" placeholder="Password" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label asp-for="ConfirmPassword" class="control-label"></label>
                                        <input asp-for="ConfirmPassword" class="form-control col-md-12" placeholder="Password" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary btn-lg btn-block" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
